@model TagMe2.Models.Post

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>Post</h4>
<hr />
@using (Html.BeginForm("Add", "Post", FormMethod.Post)) {
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Caption" class="control-label"></label>
                    <input asp-for="Caption" class="form-control" />
                    <span asp-validation-for="Caption" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="URL" class="control-label"></label>
                    <div class="form-group">
                        <input type="file" name="ImageFile" required />
                    </div>
                </div>
               
            
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}